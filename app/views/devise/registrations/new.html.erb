<div class="container">
  <div class="row centered-form">
    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title ">Sign up</h3>
        </div>
      <div class="panel-body">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email Address" %><br>
  </div>

  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6">
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control input-sm", placeholder: "Password" %>
      </div>
    </div>

    <div class="col-xs-6 col-sm-6 col-md-6">
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-sm", placeholder: "Confirm Password" %>
      </div>
    </div>
  </div>


  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-info btn-block" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>

</div>
</div>
</div>


