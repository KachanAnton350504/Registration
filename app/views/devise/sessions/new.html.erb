<div class="container">
  <div class="row centered-form">
    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title ">Log in</h3>
        </div>
      <div class="panel-body">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email Address" %><br>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", class: "form-control input-sm", placeholder: "Password" %></br>
  </div>

  <div class="actions">
    <%= f.submit "Sign in", class: "btn btn-info btn-block" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
  
  
</div>
</div>
</div>

